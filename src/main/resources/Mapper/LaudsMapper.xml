<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.myitem.mapper.LaudsMapper">
    <!--    如果没有该文章和email对应信息，先添加-->
    <insert id="insertLauds" parameterType="Lauds">
        insert into lauds(bid,email,isLaud)
        values (#{bid},#{email},1)
    </insert>
    <!--    根据email和bid查询是否已点赞-->
    <select id="isLaud" parameterType="Lauds" resultType="Integer">
        select isLaud
        from lauds
        where bid = #{bid}
          and email = #{email}</select>
</mapper>
